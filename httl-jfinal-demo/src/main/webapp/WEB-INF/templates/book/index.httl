$!{extends("/layout.httl")}
<!--#macro(main)-->
	<!--#if(books)-->
	<div>
	<table class="table">
		<tr>
			<td>序号</td>
			<td>${"book.title".message}</td>
			<td>作者</td>
			<td>出版商</td>
			<td>出版时间</td>
			<td>定价</td>
			<td>折扣</td>
			<td>售价</td>
		</tr>
